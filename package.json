{
	"name": "nekopawext",
	"displayName": "NekoPawExt",
	"description": "在NekoPaw调试Javascript",
	"publisher": "NekoPaw",
	"repository": "https://github.com/NekoPawClub/nekopawext",
	"version": "0.0.6",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:nekopawext.connectDevice",
		"onCommand:nekopawext.runJS"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "NekoPawExt设置",
			"properties": {
				"NekoPawExt.WebSocket.IP": {
					"type": "string",
					"default": "192.168.1.5",
					"description": "连接NekoPaw设备使用的网络地址"
				},
				"NekoPawExt.WebSocket.PORT": {
					"type": "string",
					"default": "8889",
					"description": "连接NekoPaw设备使用的服务端口"
				}
			}
		},
		"commands": [
			{
				"command": "nekopawext.connectDevice",
				"title": "NekoPaw: 链接手机IP"
			},
			{
				"command": "nekopawext.runJS",
				"title": "在NekoPaw运行js",
				"icon": {
					"light": "./images/tool-light.svg",
					"dark": "./images/tool-light.svg"
				}
			}
		],
		"menus": {
			"editor/context": [{
				"when": "editorLangId == javascript",
				"command": "nekopawext.runJS",
				"group": "navigation"
			}]
		},
		"snippets": [{
			"language": "javascript",
			"path": "./snippets/javascript.json"
		}]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@types/websocket": "^1.0.1",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"websocket": "^1.0.33"
	}
}